@model IEnumerable<User>

@{
    Layout = "_Layout";
    ViewData["Title"] = "Index";
}

<section class="banner_area">
    <div class="container">
        <div class="banner_text">
            <h3>Account List</h3>
            <ul>
                <li><a href="/Home/Index">Home</a></li>
            </ul>
        </div>
    </div>
</section>
<section class="contact_form_area p_100">
    <div class="container">
        <div class="main_title">
            <h2>Account List</h2>
        </div>
        <div class="row">
            <table class="table">
                <thead>
                    <tr>
                        <th></th>
                        <th>
                            Account
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.Name)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.Phone)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.Mail)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.Sex)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.Dob)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.IsActive)
                        </th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>
                                <img src="@Html.DisplayFor(modelItem => item.Avatar)"
                                     style="width: 46px; height:46px; border-radius: 50%;" />
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.UserName)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Name)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Phone)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Mail)
                            </td>
                            <td>
                                @{
                                    if(item.Sex.Equals("true")){
                                        <span>Female</span>
                                    }

                                    {
                                        <span>Male</span>
                                    }
                                }
                            </td>
                            <td>
                                @item.Dob?.ToString("MM/dd/yyyy")
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.IsActive)
                            </td>
                            <td>
                                <a asp-action="Details" asp-route-id="@item.UserId"><i class="fa fa-file-text"></i></a> |
                                <a asp-action="Edit" asp-route-id="@item.UserId"><i class="fa fa-pencil"></i></a> |
                                <a asp-action="Delete" asp-route-id="@item.UserId"><i class="fa fa-times"></i></a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</section>

